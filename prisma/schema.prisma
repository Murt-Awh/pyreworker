generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("mongoUri")
}

// * The module for bio's.
// TODO: Scrap this and turn it into a profile feature.

model Bio {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  discordId   String @unique
  description String
}

// * Used for partner codes.
model Referral {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  partnerDiscordId String
  code             String @unique
  discount         Int
  sales            Int
  tab              Float?
}
