generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("mongoUri")
}

/// Used for saving info about user descriptions
/// This model is likely to be removed after alpha.
model Bio {
  /// MongoDB ID, configured as the primary key
  id String @id @default(auto()) @map("_id") @db.ObjectId

  /// Discord ID of the user, must be unique 
  /// as it's used to identify the user this bio belongs to
  discordId String @unique

  /// The user's description
  description String

  /// The user's email
  email: emailInput != null ? emailInput : undefined,

  /// The user's portfolio
  portfolio String @unique
}
